https://www.biobaumbauer.de {
	redir https://biobaumbauer.de{uri} permanent
}

https://biobaumbauer.de {
	@api path /api/* /admin /admin/*
	handle @api {
		reverse_proxy bbb-backend-prod:4000
	}

	handle {
		reverse_proxy bbb-frontend-prod:3000
	}
}

https://staging.biobaumbauer.de {
	@api path /api/* /admin /admin/*
	handle @api {
		reverse_proxy bbb-backend-stage:4000
	}

	handle {
		reverse_proxy bbb-frontend-stage:3000
	}
}

